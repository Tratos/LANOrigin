<Window x:Class="LANOrigin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LANOrigin"
        mc:Ignorable="d"
        Title="OriginLAN - Login" Height="333" Width="346">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">

            <TextBlock Text="Username:" Foreground="White" FontSize="14" Margin="0,10,0,5"/>
            <TextBox x:Name="UsernameBox" Height="30"/>

            <TextBlock Text="Password:" Foreground="White" FontSize="14" Margin="0,10,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="30"/>

            <Button Content="Login" Width="100" Height="30" Margin="0,20,0,0" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>

</Window>
